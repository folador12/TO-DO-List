<%= form_with(model: [@list, item]) do |form| %>
<div>
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>

<div>
    <%= form.label :description %>
    <%= form.text_area :description %>
</div>

<div>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
</div>

<div>
    <%= form.submit %>
</div>
<% end %>