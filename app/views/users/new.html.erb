<div class="max-w-lg mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg w-full">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Cadastrar</h1>

    <%= form_with model: @user, url: users_path, local: true, class: "flex flex-col gap-4" do |form| %>
    <% if @user.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-200 text-red-600 p-4 rounded-lg">
        <h2 class="font-bold mb-2"><%= pluralize(@user.errors.count, "erro") %> proibiu o cadastro:</h2>
        <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div>
        <%= form.label :name, "Nome", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :name, class: "w-full border-gray-300 rounded-lg shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
        <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email_address, class: "w-full border-gray-300 rounded-lg shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
        <%= form.label :password, "Senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password, class: "w-full border-gray-300 rounded-lg shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
        <%= form.label :password_confirmation, "Confirme sua senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.password_field :password_confirmation, class: "w-full border-gray-300 rounded-lg shadow-sm p-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
        <%= form.submit "Cadastrar", class: "w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition-all font-medium" %>
    </div>

    <div class="flex justify-end items-center">
        <%= link_to "Voltar", new_session_path, class: "text-blue-600 hover:underline font-medium" %>
    </div>
    <% end %>
</div>